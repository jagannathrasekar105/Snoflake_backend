create or replace TABLE ECOMMERCE_DB.PUBLIC.CART_ITEMS (
	ID NUMBER(38,0) NOT NULL autoincrement start 1 increment 1 noorder,
	USER_ID NUMBER(38,0) NOT NULL,
	PRODUCT_ID NUMBER(38,0) NOT NULL,
	QUANTITY NUMBER(38,0) DEFAULT 1,
	ADDED_AT TIMESTAMP_NTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	primary key (ID)
);
create or replace TABLE ECOMMERCE_DB.PUBLIC.CATEGORIES (
	ID NUMBER(38,0) NOT NULL autoincrement start 1 increment 1 noorder,
	NAME VARCHAR(255) NOT NULL,
	CREATED_AT TIMESTAMP_NTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	primary key (ID)
);
create or replace TABLE ECOMMERCE_DB.PUBLIC.ORDERS (
	ID VARCHAR(16777216) NOT NULL,
	USER_ID NUMBER(38,0),
	NAME VARCHAR(16777216),
	MOBILE VARCHAR(16777216),
	ADDRESS VARCHAR(16777216),
	CITY VARCHAR(16777216),
	PINCODE VARCHAR(16777216),
	PAYMENT_METHOD VARCHAR(16777216),
	TOTAL_AMOUNT FLOAT,
	ORDER_DATE TIMESTAMP_NTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	STATUS VARCHAR(16777216) DEFAULT 'pending',
	primary key (ID)
);
create or replace TABLE ECOMMERCE_DB.PUBLIC.ORDER_ITEMS (
	ID VARCHAR(16777216) DEFAULT UUID_STRING(),
	ORDER_ID VARCHAR(16777216),
	PRODUCT_ID NUMBER(38,0),
	QUANTITY NUMBER(38,0),
	PRICE FLOAT
);
create or replace TABLE ECOMMERCE_DB.PUBLIC.PRODUCTS (
	ID NUMBER(38,0) NOT NULL autoincrement start 1 increment 1 noorder,
	NAME VARCHAR(255) NOT NULL,
	DESCRIPTION VARCHAR(16777216),
	PRICE NUMBER(10,2) NOT NULL,
	DISCOUNT NUMBER(5,2) DEFAULT 0,
	FINAL_PRICE NUMBER(10,2),
	IMAGE_URL VARCHAR(255),
	CATEGORY_ID NUMBER(38,0),
	CATEGORY VARCHAR(100),
	BRAND VARCHAR(100),
	STOCK_QUANTITY NUMBER(38,0) DEFAULT 0,
	SHIPPING_COST NUMBER(10,2) DEFAULT 0,
	IS_FEATURED BOOLEAN DEFAULT FALSE,
	RATING NUMBER(2,1) DEFAULT 0,
	CREATED_AT TIMESTAMP_NTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	UPDATED_AT TIMESTAMP_NTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	IS_TOP_SELLING BOOLEAN DEFAULT FALSE,
	primary key (ID)
);
create or replace TABLE ECOMMERCE_DB.PUBLIC.USERS (
	ID NUMBER(38,0) NOT NULL autoincrement start 1 increment 1 noorder,
	FIRSTNAME VARCHAR(16777216),
	LASTNAME VARCHAR(16777216),
	EMAIL VARCHAR(16777216),
	USERNAME VARCHAR(16777216),
	PASSWORD VARCHAR(16777216),
	PROFILEPIC VARCHAR(16777216),
	CREATED_AT TIMESTAMP_LTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	PROFILE_PIC BINARY(8388608),
	unique (EMAIL),
	unique (USERNAME),
	primary key (ID)
);
create or replace TABLE ECOMMERCE_DB.PUBLIC.WISHLIST (
	ID NUMBER(38,0) NOT NULL autoincrement start 1 increment 1 noorder,
	USER_ID NUMBER(38,0) NOT NULL,
	PRODUCT_ID NUMBER(38,0) NOT NULL,
	CREATED_AT TIMESTAMP_NTZ(9) DEFAULT CURRENT_TIMESTAMP(),
	primary key (ID)
);